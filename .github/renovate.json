{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 20,
  "platformAutomerge": true,
  "labels": [
    "dependencies"
  ],
  "postUpdateOptions": [
    "gomodUpdateImportPaths",
    "gomodTidy"
  ],
  "ignorePaths": [
    "frontend-old/**"
  ],
  "packageRules": [
    {
      "description": "Upgrade go indirect dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": true
    },
    {
      "description": "Restrict go indirect dependencies up to minor",
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "description": "Auto merge devDependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "description": "Auto merge GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "description": "Auto merge up to minor",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Auto merge digest & pin",
      "matchUpdateTypes": [
        "digest",
        "pin",
        "pinDigest"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Go tool dependencies",
      "fileMatch": [
        ".+\\.ya?ml$",
        "(^|/)Dockerfile$"
      ],
      "matchStrings": [
        "go install (?<depName>((?:[^@c]|c(?:[^m]|m(?:[^d]))))+?)@(?<currentValue>.+)\n",
        "go install (?<depName>[^@]+?)/cmd/[^@]+@(?<currentValue>.+)\n"
      ],
      "datasourceTemplate": "go"
    }
  ]
}
